{
	"name": "echo",
	"version": "1.0.0",
	"description": "Signalling server written in Typescript and Node",
	"main": "server.js",
	"scripts": {
		"tsc": "tsc",
		"precompile": "rm -r build || true",
		"compile": "npm run tsc",
		"postinstall": "npm run tsc && cp ./src/index.html ./build/index.html",
		"watch:development": "nodemon",
		"build": "rm -rf ./build/ && tsc",
		"start": "node build/server.js",
		"commit": "git add . && git cz"
	},
	"keywords": [
		"nodejs",
		"websocket",
		"socket.io",
		"javascript"
	],
	"author": "Arpit Dubey",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@types/body-parser": "^1.17.1",
		"@types/express": "^4.17.2",
		"@types/jest": "^24.9.0",
		"@types/node": "^13.5.0",
		"@types/socket.io": "^2.1.4",
		"@typescript-eslint/eslint-plugin": "^2.16.0",
		"@typescript-eslint/parser": "^2.16.0",
		"cz-conventional-changelog": "^3.0.2",
		"eslint": "^6.8.0",
		"eslint-plugin-import": "^2.20.0",
		"husky": "^4.0.10",
		"jest": "^24.9.0",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"ts-jest": "^24.3.0",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"express": "^4.17.1",
		"morgan": "^1.9.1",
		"socket.io": "^2.3.0",
		"twilio": "^3.39.3",
		"uuid": "^3.4.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"singleQuote": false,
		"trailingComma": "all",
		"tabWidth": 2
	}
}
