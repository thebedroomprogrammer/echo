{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"isolatedModules": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "build",
		"baseUrl": "./src/"
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"exclude": ["node_modules"],
	"include": ["index.html"]
}
