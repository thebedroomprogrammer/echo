{
	"compilerOptions": {
		"target": "esNext",
		"module": "esNext",
		"declaration": false,
		"allowJs": true,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,

		"importHelpers": true,
		"outDir": "dist",
		"lib": ["webworker", "dom"]
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"exclude": ["node_modules"]
}
